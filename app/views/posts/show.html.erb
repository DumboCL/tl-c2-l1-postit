<h4>Hi there, you're viewing <%= link_to @post.title, fix_url(@post.url) %></h4>

<p>
  <%= render @post.categories %>
</p>
      
<%= render 'shared/content_title', title: @post.title %>


<p>
  <%= @post.description %>
</p>


<%= link_to 'Edit the post', edit_post_path(@post), class: "btn btn-primary" %>
<hr />
<p>
  <%= form_for [@post, @comment] do |f| %>
    <%= render 'shared/errors', object: @comment %>
    <div class="control-group">
      <%= f.label :body, 'Leave a comment' %>
      <%= f.text_area :body, rows: 3, class: 'span4' %>
    </div>
    <%= f.submit('Create Comment', class: 'btn btn-primary') %>
  <% end %>
</p>
<hr />
<h5>Comments:</h5>
<p>
  <% @post.comments.each do |comment| %>
    <p><%= comment.body %></p>
    <p>
      <span class="quiet">commented by </span><%= comment.creator.username %>
      <small>at <%= comment.created_at %></small>
    </p>
  <% end %>
</p>


